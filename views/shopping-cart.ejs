                <tr>
                    <td>Envío</td>
                    <td><p>$0</p></td>
                </tr>
                <tr>
                    <td>Total</td>
                    <td><p>$0</p></td>
                </tr>
            </table>
            <button class="boton-comprar">CONTINUAR CON LA COMPRA</button>
        </div>
    </main>
    <%- include('./partials/footer') %>
</body>
</html>