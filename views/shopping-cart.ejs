                </tr>
                <tr>
                    <td>Producto 2</td>
                    <td>Detalles 2</td>
                    <td>$100</td>
                </tr>
                <tr>
                    <td>Producto 3</td>
                    <td>Detalles 3</td>
                    <td>$100</td>
                </tr>
                <tr>
                    <td>Producto 4</td>
                    <td>Detalles 4</td>
                    <td>$100</td>
                </tr>
            </table>
        </div>
        <div class="tabla-resumen">
            <table>
                <tr>
                    <th>RESUMEN DE PEDIDO</th>
                </tr>
                <tr>
                    <td>Subtotal de ítems</td>
                    <td><p>$0</p></td>
